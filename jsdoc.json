{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["routes", "inc"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["node_modules/better-docs/category"],
  "opts": {
    "destination": "./doc",
    "recurse": true,
    "template": "node_modules/better-docs"
  },
  "templates": {
    "better-docs": {
      "name": "API Documentation",
      "logo": "",
      "hideGenerator": true
    }
  }
}
